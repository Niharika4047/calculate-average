#include<stdio.h>
#include<stdlib.h>

float calculateAverage(int *arr, int size)
{
    int sum=0;
    for(int i=0; i<size; i++)
    {
        sum+=arr[i];
    }

    return sum/size;
}

int main()
{
    int size;
    printf("Enter the size of integer array: ");
    scanf("%d", &size);

    //Dynamically allocating memory to array
    int *arr;
    arr = (int*)malloc(size*sizeof(int));

    printf("Enter elements of array: \n");
    for(int i=0; i<size; i++)
    {
        scanf("%d",&arr[i]);
    }

    float ans= calculateAverage(arr,size);
    printf("The average is: %0.2f",ans);
    return 0;
}
